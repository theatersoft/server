{
  "name": "@theatersoft/server",
  "version": "3.0.0",
  "main": "index.js",
  "private": true,
  "scripts": {
    "BUS": "BUS=`[ -f .bus ] && cat .bus` AUTH=`[ -f .auth ] && cat .auth`",
    "build": "time -p node build",
    "build-package": "node build.js package",
    "build-server": "node build.js server-all package",
    "debug-build": "node --inspect=9966 --debug-brk build",
    "debug-dev-server": "cd build/server; PORT=5453 NODE_ENV=development node --inspect=9961 --debug-brk src/theatersoft.js",
    "debug-dev-server-bus": "cd build/server; PORT=5453 NODE_ENV=development BUS=`cat ../../.bus` AUTH=`cat ../../.auth` node --inspect=9961 --debug-brk src/theatersoft.js",
    "debug-opt-server": "cd build/server; HOME=/opt/theatersoft node --inspect=9961 --debug-brk src/theatersoft.js",
    "debug-opt-pipeline-server": "cd build/server; HOME=/opt/theatersoft node --inspect=9962 --debug-brk src/pipeline-server.js",
    "deploy": "node build deploy",
    "deploy-files": "node build deploy -- files.local nopipeline",
    "deploy-theater": "node build deploy -- theater.local",
    "journalctl-theatersoft": "journalctl --follow --no-tail --unit theatersoft",
    "journalctl-theatersoft-pipeline": "journalctl --follow --no-tail --unit theatersoft-pipeline",
    "link": "cd client; npm link @theatersoft/bus; cd ../client-react; npm link @theatersoft/bus; cd ../client-mithril; npm link @theatersoft/bus; cd ../server; npm link @theatersoft/bus @theatersoft/device @theatersoft/serial @theatersoft/x10 @theatersoft/zwave",
    "link-opt": "cd /opt/theatersoft/server; npm link @theatersoft/bus @theatersoft/serial",
    "remotedev": "remotedev --hostname=0.0.0.0 --port=6400",
    "run-dev-server": "cd build/server; PORT=5453 NODE_ENV=development node src/theatersoft.js",
    "run-opt-server": "cd build/server; PORT=5453 HOME=/opt/theatersoft node src/theatersoft.js ",
    "systemctl-restart-theatersoft": "systemctl restart theatersoft",
    "systemctl-status-theatersoft": "systemctl status theatersoft",
    "systemctl-stop-theatersoft": "systemctl stop theatersoft",
    "systemctl-restart-theatersoft-pipeline": "systemctl restart theatersoft-pipeline",
    "systemctl-status-theatersoft-pipeline": "systemctl status theatersoft-pipeline",
    "systemctl-stop-theatersoft-pipeline": "systemctl stop theatersoft-pipeline"
  },
  "keywords": ["home", "automation", "control", "monitor", "security", "surveillance"],
  "author": "Rob Huehn <rob@theatersoft.com>",
  "license": "AGPL-3.0",
  "description": "Theatersoft Server",
  "devDependencies": {
    "babel-core": "^6.18.0",
    "babel-plugin-external-helpers": "^6.18.0",
    "babel-plugin-transform-class-properties": "^6.19.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-inline-environment-variables": "^6.8.0",
    "babel-plugin-transform-node-env-inline": "^6.8.0",
    "babel-plugin-transform-object-rest-spread": "^6.22.0",
    "babel-plugin-transform-react-jsx": "^6.8.0",
    "babel-plugin-transform-react-remove-prop-types": "^0.2.11",
    "babel-preset-babili": "0.0.8",
    "chokidar": "^1.6.1",
    "livereload": "^0.6.0",
    "mustache": "^2.1.3",
    "react-redux": "^4.4.6",
    "remotedev-server": "^0.3.0-beta-2",
    "rollup": "^0.36.4",
    "rollup-plugin-alias": "^1.2.0",
    "rollup-plugin-babel": "^2.6.1",
    "rollup-plugin-buble": "^0.14.0",
    "rollup-plugin-commonjs": "^5.0.5",
    "rollup-plugin-node-resolve": "^2.0.0",
    "rollup-plugin-postcss": "^0.2.0",
    "rollup-plugin-replace": "^1.1.1",
    "rollup-plugin-sourcemaps": "^0.4.1",
    "rollup-watch": "^2.5.0",
    "shelljs": "^0.7.0"
  },
  "dependencies": {}
}
