{
  "name": "@theatersoft/server",
  "version": "3.0.0",
  "main": "dist/index.js",
  "private": true,
  "scripts": {
    "BUS": "BUS=`[ -f .bus ] && cat .bus` AUTH=`[ -f .auth ] && cat .auth`",
    "build": "time -p node build.js && ls -l dist",
    "build:dist": "DIST=true npm run build && ls -l dist",
    "debug-build": "node --inspect=9966 --debug-brk build",
    "debug-dev-server": "PORT=5453 NODE_ENV=development node --inspect-brk=9961 dist/server.js",
    "debug-dev-server-bus": "PORT=5453 NODE_ENV=development BUS=`cat ../../.bus` AUTH=`cat ../../.auth` node --inspect-brk=9961 dist/server.js",
    "link": "npm link @theatersoft/bus @theatersoft/device",
    "link-dist": "cd dist; npm link @theatersoft/bus @theatersoft/device @theatersoft/serial @theatersoft/x10 @theatersoft/zwave",
    "remotedev": "remotedev --hostname=0.0.0.0 --port=6400",
    "run-dev-server": "PORT=5453 NODE_ENV=development node dist/server.js",
    "systemctl-restart-theatersoft": "systemctl restart theatersoft",
    "systemctl-status-theatersoft": "systemctl status theatersoft",
    "systemctl-stop-theatersoft": "systemctl stop theatersoft",
    "systemctl-restart-theatersoft-pipeline": "systemctl restart theatersoft-pipeline",
    "systemctl-status-theatersoft-pipeline": "systemctl status theatersoft-pipeline",
    "systemctl-stop-theatersoft-pipeline": "systemctl stop theatersoft-pipeline"
  },
  "keywords": ["home", "automation", "control", "monitor", "security", "surveillance"],
  "author": "Rob Huehn <rob@theatersoft.com>",
  "license": "AGPL-3.0",
  "description": "Theatersoft Server",
  "devDependencies": {
    "babel-core": "^6.18.0",
    "babel-plugin-external-helpers": "^6.18.0",
    "babel-plugin-transform-class-properties": "^6.19.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-inline-environment-variables": "^6.8.0",
    "babel-plugin-transform-node-env-inline": "^6.8.0",
    "babel-plugin-transform-object-rest-spread": "^6.22.0",
    "babel-preset-babili": "0.0.8",
    "remotedev-server": "^0.3.0-beta-2",
    "rollup": "^0.36.4",
    "rollup-plugin-alias": "^1.2.0",
    "rollup-plugin-babel": "^2.6.1",
    "rollup-plugin-commonjs": "^5.0.5",
    "rollup-plugin-node-resolve": "^2.0.0",
    "rollup-plugin-replace": "^1.1.1",
    "rollup-plugin-sourcemaps": "^0.4.1",
    "shelljs": "^0.7.0"
  },
  "dependencies": {
    "@theatersoft/bus": "~1",
    "express": "3.x",
    "nedb": "~0.10.5",
    "request": "~2.65.0"
  }
}
