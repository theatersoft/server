{
  "name": "@theatersoft/server",
  "version": "3.0.3",
  "description": "Theatersoft Server",
  "author": "Rob Huehn <rob@theatersoft.com>",
  "license": "AGPL-3.0",
  "repository": "theatersoft/server",
  "keywords": [
    "home",
    "automation",
    "control",
    "monitor",
    "security",
    "surveillance"
  ],
  "main": "index.js",
  "private": true,
  "scripts": {
    "build": "time -p node build.js && ls -l dist",
    "build:dist": "DIST=true npm run build",
    "debug-build": "node --inspect=9966 --debug-brk build",
    "link": "(cd dist; npm link); npm link @theatersoft/bus @theatersoft/device",
    "publish": "node build.js publish",
    "remotedev": "remotedev --hostname=0.0.0.0 --port=6400"
  },
  "distScripts": {
    "BUS": "env $(cat ${XDG_CONFIG_HOME:=~/.config}/theatersoft/.bus | xargs)",
    "link": "npm link; npm link @theatersoft/server @theatersoft/client @theatersoft/bus @theatersoft/device @theatersoft/serial @theatersoft/x10 @theatersoft/zwave",
    "start": "PORT=443 authbind node server.js",
    "start-child": "npm run BUS -- node server.js",
    "start-dev": "PORT=5453 NODE_ENV=development node server.js",
    "start-dev-child": "PORT=5453 NODE_ENV=development npm run BUS -- node server.js",
    "start-capture": "npm run BUS -- node capture/start.js",
    "debug-dev": "PORT=5453 NODE_ENV=development node --inspect-brk=9961 server.js",
    "debug-dev-child": "PORT=5453 NODE_ENV=development npm run BUS -- node --inspect-brk=9961 server.js",
    "systemctl-restart-theatersoft": "systemctl restart theatersoft",
    "systemctl-status-theatersoft": "systemctl status theatersoft",
    "systemctl-stop-theatersoft": "systemctl stop theatersoft",
    "systemctl-restart-theatersoft-capture": "systemctl restart theatersoft-capture",
    "systemctl-status-theatersoft-capture": "systemctl status theatersoft-capture",
    "systemctl-stop-theatersoft-capture": "systemctl stop theatersoft-capture"
  },
  "devDependencies": {
    "babel-core": "^6.18.0",
    "babel-plugin-external-helpers": "^6.18.0",
    "babel-plugin-transform-class-properties": "^6.19.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-inline-environment-variables": "^6.8.0",
    "babel-plugin-transform-node-env-inline": "^6.8.0",
    "babel-plugin-transform-object-rest-spread": "^6.22.0",
    "babel-preset-babili": "0.0.8",
    "remotedev-server": "^0.3.0-beta-2",
    "rollup": "^0.36.4",
    "rollup-plugin-alias": "^1.2.0",
    "rollup-plugin-babel": "^2.6.1",
    "rollup-plugin-commonjs": "^5.0.5",
    "rollup-plugin-node-resolve": "^2.0.0",
    "rollup-plugin-replace": "^1.1.1",
    "rollup-plugin-sourcemaps": "^0.4.1",
    "shelljs": "^0.7.0"
  },
  "distDependencies": {
    "@theatersoft/bus": "~1",
    "express": "3.x",
    "nedb": "~0.10.5",
    "request": "~2.65.0"
  },
  "distPeerDependencies": {
    "@theatersoft/client": "~1"
  }
}
